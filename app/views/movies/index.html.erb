<div class="container">
  <div class="row">
    <% if @movie.empty? %>
      <div class="col-sm-12 text-center mt-5">
        <h2>No results - Search again please</h2>
      </div>
    <% end %>
    <% @movie.each do |movie| %>
      <div class="card-deck col-sm-12 col-md-6 mt-3">
        <div class="card card-border card-shadow">
          <%= image_tag "#{movie.poster_url}", class: 'card-img-top card-img-border card-shadow card-img' %>
          <div class="card-body">
            <div class="d-flex align-middle justify-content-center">
              <h4 class="card-title text-center mr-2"> <%= movie.title %> </h4>
              <div class="d-flex align-middle">
                <h4 class='text-success'> <%= movie.rating %> </h4>
                <i class="fas fa-star fa-lg pt-1 ml-1 text-warning"></i>
              </div>
            </div>
            <p class="card-text"> <%= movie.overview %> </p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <small class='text-success'> <%= link_to("Leave a review", new_movie_review_path(movie,@review)) %> </small>
            <small class='text-success'> <%= link_to("Add to a list", lists_path) %> </small>
          </div>
         <div>
            <ul class='list-group'>
            <% movie.reviews.each do |review| %>
              <li class="list-group-item d-flex pb-0">
                <i class="fas fa-quote-left mr-2"></i>
                <p><%= review.comment %></p>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
