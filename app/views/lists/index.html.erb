<div class="banner" style='background-image: url("https://source.unsplash.com/atsUqIm3wxo/1600x900"); object-fit: cover;'>
  <div class="container text-center">
    <div class="row d-flex justify-content-center align-middle">
      <h2 class="hero-title" id="banner-typed-text" ></h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-between align-content-center p-2">
      <h2>My lists:</h2>
      <small><%= link_to("New List", new_list_path(@list) , class: 'btn btn-success btn-sm text-light') %></small>
    </div>
  </div>
  <div class="row">
    <% @list.each do |list| %>
      <div class="card-deck col-12 col-md-6 mt-3">
        <div class="card card-border card-shadow">
          <%= cl_image_tag list.picture.key,height:300, width: 400, crop: :fill,class: 'card-img-top card-img-border card-shadow' %>
          <div class="card-body">
            <h2 class="card-title text-center"> <%= link_to "#{list.name}", list_path(list), class: 'text-dark' %> </h2>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <small> <%= link_to 'Delete list', list_path(list), method: :delete, class: 'text-warning', data: {confirm: 'Do you want to delete this list?'} %> </small>
            <small> <%= link_to 'Add bookmark', new_list_bookmark_path(list), class: 'text-dark' %> </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
