<div class="container">
  <div class="row mt-5">
    <div class="col-12 text-center text-secondary">
      <h1>Leave a review:</h1>
    </div>
  </div>
  <div class="row mt-2 min-vh-100">
    <div class="col-sm-12">
      <%= simple_form_for [@movie, @review] do |f| %>
        <%= f.input :comment %>
        <%= f.button :submit, class:'btn btn-outline-success' %>
      <% end %>
    </div>
  </div>
</div>
